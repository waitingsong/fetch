{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "inlineSourceMap": false,
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "outDir": ".",
    "rootDir": ".",
    "target": "ESNEXT",
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "asset",
    "app/public",
    "app/views",
    "dist",
    "node_modules*",
    "**/*.d.ts",
    "**/*.spec.ts"
  ]
}
