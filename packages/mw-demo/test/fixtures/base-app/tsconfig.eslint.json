{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declarationMap": false,
    "noEmit": true,
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "test/**/*.ts",
    "test/**/*.mts",
    "test_browser/**/*.ts"
  ],
  "exclude": [
    "asset",
    "app/public",
    "app/views",
    "dist",
    "node_modules*",
    "**/*.d.ts"
  ]
}
