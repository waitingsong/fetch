{
  "version": "3.0.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "package-lock.json"
      ]
    },
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "nohoist": [
        "cross-env"
      ],
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "allowBranch": "master",
      "registry": "https://registry.npmjs.org/"
    }
  },
  "npmClient": "npm"
}
