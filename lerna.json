{
  "version": "15.0.2",
  "packages": [
    "packages/*"
  ],
  "ignore": "demo",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "package-lock.json"
      ]
    },
    "bootstrap": {
      "hoist": true,
      "noCi": true,
      "nohoist": [
        "cross-env",
        "egg"
      ],
      "npmClientArgs": [
        "--legacy-peer-deps"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "allowBranch": ["main", "release"],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "npmClient": "npm"
}
