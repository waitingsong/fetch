{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "index.ts",
      "type": "node",
      "args": [
        "-P", "./tsconfig.cjs.json",
        "src/index.ts"
      ],
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
      "protocol": "inspector",
      "request": "launch",
      "runtimeArgs": [
        "--nolazy"
      ],
      "skipFiles": [
        "${workspaceFolder}/../../node_modules/rxjs/**/*.js",
        "${workspaceFolder}/node_modules/rxjs/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "stopOnEntry": false
    },
    {
      "name": "Current TS File",
      "type": "node",
      "args": [
        "-P", "./tsconfig.cjs.json",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
      "protocol": "inspector",
      "request": "launch",
      "runtimeArgs": [
        "--nolazy"
      ],
      "skipFiles": [
        "${workspaceFolder}/node_modules/rxjs/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "stopOnEntry": false
    },
    {
      "name": "Chrome Debug with Karma",
      "type": "chrome",
      "address": "localhost",
      "pathMapping": {
        "/": "${workspaceRoot}/",
        "/base/": "${workspaceRoot}/"
      },
      "port": 9333,
      "request": "attach"
    },
    {
      "name": "Mocha Tests",
      "type": "node",
      "args": [
        "-u",
        "bdd",
        "--timeout",
        "999999",
        "--colors",
        // "${workspaceFolder}/test/**/**.test.ts"
      ],
      "env": {
        "NODE_ENV": "local",
        "TS_NODE_PROJECT": "test/tsconfig.json",
        "PGHOST": "",
        "PGUSER": "",
        "PGPASSWORD": "",
      },
      "internalConsoleOptions": "openOnSessionStart",
      "program": "${workspaceFolder}/../../node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": [
        "${workspaceFolder}/../../node_modules/rxjs/**/*.js",
        "${workspaceFolder}/node_modules/rxjs/**/*.js",
        "<node_internals>/**/*.js"
      ]
    },
  ]
}
