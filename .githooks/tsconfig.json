{
  "compilerOptions": {
    "alwaysStrict": true,
    "charset": "utf8",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": false,
    "inlineSourceMap": false,
    "module": "commonjs",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "target": "ES2017",
    "types" : ["node"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "asset/",
    "dist/",
    "test/",
    "node_modules*",
    "**/*.d.ts",
    "**/*.spec.ts"
  ]
}
